<?xml version="1.0" encoding="utf-8"?>
<!-- 
QR Tarama Dialog Layout Dosyası
Açıklama: Modern tasarımlı QR kod tarama arayüzü
Referans: Material Design Guidelines
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- Başlık Çubuğu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#191919"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="QR Kod Tarama"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kapat"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@android:color/white" />

    </RelativeLayout>

    <!-- Kamera Önizleme Bölümü -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black">

        <!-- Kamera Önizleme -->
        <androidx.camera.view.PreviewView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <!-- QR Kod Tarama Çerçevesi -->
        <View
            android:id="@+id/scannerOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <!-- Tarama Çerçevesi -->
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:contentDescription="Tarama çerçevesi"
            android:src="@drawable/qr_scanner_frame" />

        <!-- Odak Noktası Göstergesi -->
        <View
            android:id="@+id/focusIndicator"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/ic_focus_ring"
            android:visibility="invisible" />

    </FrameLayout>

    <!-- Kontrol Paneli -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191919"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Durum Metni -->
        <TextView
            android:id="@+id/qrStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="QR kodu tarayıcı içinde hizalayın"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <!-- Kontrol Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Flash Butonu -->
            <Button
                android:id="@+id/btnFlash"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#333333"
                android:text="Flash"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <!-- Zoom Butonu -->
            <Button
                android:id="@+id/btnZoom"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#333333"
                android:text="Zoom 1.0x"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <!-- Tarama Modu Butonu -->
            <Button
                android:id="@+id/btnScanMode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#333333"
                android:text="Normal"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- QR Sonuç Önizleme -->
        <TextView
            android:id="@+id/qrResultPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#80000000"
            android:gravity="center"
            android:padding="8dp"
            android:text="Bulunan: -"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>