<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deviceCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/card_state_animator">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        
        <!-- Cihaz İkonu -->
        <ImageView
            android:id="@+id/deviceIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Cihaz"
            android:src="@drawable/ic_add_device_modern"
            app:tint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
            
        <!-- Seçim Onay İkonu - Başlangıçta görünmez -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/checkIconContainer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:strokeWidth="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/deviceIcon"
            app:layout_constraintTop_toTopOf="@+id/deviceIcon"
            app:layout_constraintBottom_toBottomOf="@+id/deviceIcon"
            app:layout_constraintEnd_toEndOf="@+id/deviceIcon">
            
            <ImageView
                android:id="@+id/checkIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Seçildi"
                android:padding="4dp"
                android:src="@drawable/ic_check"
                app:tint="?attr/colorOnPrimary" />
        </com.google.android.material.card.MaterialCardView>
            
        <!-- Cihaz Adı -->
        <TextView
            android:id="@+id/deviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favoriteIconContainer"
            app:layout_constraintStart_toEndOf="@+id/deviceIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Modern Cihaz Adı" />
            
        <!-- Favori İkonu - Modern yıldız stili -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/favoriteIconContainer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:strokeWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            
            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Favorilere Ekle"
                android:padding="4dp"
                android:src="@drawable/ic_star_border"
                app:tint="?attr/colorPrimary" />
        </com.google.android.material.card.MaterialCardView>
            
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</com.google.android.material.card.MaterialCardView>
